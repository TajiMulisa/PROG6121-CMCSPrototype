@model CMCSPrototype.Models.DashboardViewModel;
@{
    var role = Context.Session.GetString("UserRole");
    var userName = Context.Session.GetString("UserName");
}
<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2><i class="fas fa-tachometer-alt"></i> Dashboard</h2>
            <p class="text-muted">Welcome, <strong>@userName</strong>! You are logged in as <span class="badge badge-primary">@role</span></p>
        </div>
    </div>
    
    @if (Model.TotalClaims == 0)
    {
        <div class="alert alert-info">
            <h5><i class="fas fa-info-circle"></i> Getting Started</h5>
            @if (role == "Lecturer")
            {
                <p>You haven't submitted any claims yet. Click the button below to submit your first claim!</p>
            }
            else if (role == "Coordinator")
            {
                <p>No claims are currently pending your approval. Claims submitted by lecturers will appear here for review.</p>
            }
            else if (role == "Manager")
            {
                <p>No claims are currently pending your approval. Claims approved by coordinators will appear here for final approval.</p>
            }
        </div>
    }
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <h3>@Model.TotalClaims</h3>
                    <p class="mb-0">Total Claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <h3>@Model.PendingClaims</h3>
                    <p class="mb-0">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h3>@Model.ApprovedClaims</h3>
                    <p class="mb-0">Approved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body text-center">
                    <h3>@Model.RejectedClaims</h3>
                    <p class="mb-0">Rejected</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        @if (role == "Lecturer")
        {
            <a asp-controller="Claims" asp-action="SubmitClaim" class="btn btn-primary">
                <i class="fas fa-plus"></i> Submit New Claim
            </a>
            <a asp-controller="Claims" asp-action="TrackStatus" class="btn btn-info">
                <i class="fas fa-chart-line"></i> Track My Claims
            </a>
        }
        @if (role == "Coordinator" || role == "Manager")
        {
            <a asp-controller="Claims" asp-action="GetApproveClaims" class="btn btn-success">
                <i class="fas fa-check"></i> Review Claims
            </a>
        }
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Recent Claims</h5>
        </div>
        <div class="card-body">
            @if (Model.RecentClaims != null && Model.RecentClaims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Lecturer</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Submission Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.RecentClaims)
                            {
                                <tr>
                                    <td>@claim.Id</td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td>R @claim.TotalAmount.ToString("N2")</td>
                                    <td>@claim.Status</td>
                                    <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (role == "Lecturer")
                                        {
                                            <span class="text-muted">View</span>
                                        }
                                        else if (role == "Coordinator" || role == "Manager")
                                        {
                                            <a asp-controller="Claims" asp-action="ClaimDetails" asp-route-id="@claim.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Review
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">No claims found.</div>
            }
        </div>
    </div>
</div>

@model List<CMCSPrototype.Models.User>
@{
    ViewData["Title"] = "Lecturers";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-person-badge-fill"></i> Lecturers</h2>
            <p class="text-muted">View and manage lecturer information and hourly rates</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("CreateUser", "HR")" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> Add New Lecturer
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Hourly Rate</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lecturer in Model)
                            {
                                <tr class="@(lecturer.IsActive ? "" : "table-secondary")">
                                    <td>@lecturer.Id</td>
                                    <td>
                                        <strong>@lecturer.FullName</strong>
                                    </td>
                                    <td>@lecturer.Email</td>
                                    <td>
                                        @if (lecturer.HourlyRate.HasValue)
                                        {
                                            <span class="badge bg-success fs-6">@lecturer.HourlyRate.Value.ToString("C")/hr</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Not Set</span>
                                        }
                                    </td>
                                    <td>
                                        @if (lecturer.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@lecturer.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a href="@Url.Action("EditUser", "HR", new { id = lecturer.Id })" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-fill"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Total Lecturers</h6>
                                <h3>@Model.Count</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Active Lecturers</h6>
                                <h3 class="text-success">@Model.Count(l => l.IsActive)</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Average Hourly Rate</h6>
                                <h3 class="text-primary">
                                    @if (Model.Any(l => l.HourlyRate.HasValue))
                                    {
                                        @Model.Where(l => l.HourlyRate.HasValue).Average(l => l.HourlyRate!.Value).ToString("C")
                                    }
                                    else
                                    {
                                        <span>N/A</span>
                                    }
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle-fill"></i> No lecturers found. Create a new user with the Lecturer role to get started.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "HR")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

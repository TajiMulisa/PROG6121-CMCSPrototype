@model CMCSPrototype.Models.HRDashboardViewModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-speedometer2"></i> HR Dashboard</h2>
            <p class="text-muted">Manage users, view statistics, and generate reports</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people-fill"></i> Total Users</h5>
                    <h2>@Model.TotalUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-check-fill"></i> Active Lecturers</h5>
                    <h2>@Model.ActiveLecturers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-clock-fill"></i> Pending Claims</h5>
                    <h2>@Model.PendingClaims</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-check-circle-fill"></i> Approved Claims</h5>
                    <h2>@Model.ApprovedClaims</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Summary -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-cash-stack"></i> Total Payments This Month</h5>
                    <h2 class="text-success">@Model.TotalPaymentsThisMonth.ToString("C")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <h4>Quick Actions</h4>
        </div>
        <div class="col-md-3 mb-3">
            <a href="@Url.Action("CreateUser", "HR")" class="btn btn-primary btn-lg w-100">
                <i class="bi bi-person-plus-fill"></i><br />
                Create New User
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a href="@Url.Action("ManageUsers", "HR")" class="btn btn-info btn-lg w-100">
                <i class="bi bi-people-fill"></i><br />
                Manage Users
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a href="@Url.Action("GenerateReports", "HR")" class="btn btn-success btn-lg w-100">
                <i class="bi bi-file-earmark-text-fill"></i><br />
                Generate Reports
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a href="@Url.Action("Lecturers", "HR")" class="btn btn-warning btn-lg w-100">
                <i class="bi bi-person-badge-fill"></i><br />
                View Lecturers
            </a>
        </div>
    </div>

    <!-- Recent Users -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-clock-history"></i> Recently Added Users</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentUsers.Any())
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Hourly Rate</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.RecentUsers)
                                {
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td><span class="badge bg-secondary">@user.Role</span></td>
                                        <td>@(user.HourlyRate.HasValue ? user.HourlyRate.Value.ToString("C") : "N/A")</td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No users found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

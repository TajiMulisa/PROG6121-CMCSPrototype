@model List<CMCSPrototype.Models.Claim>
@{
    ViewData["Title"] = "Generate Reports";
    var startDate = ViewBag.StartDate as DateTime?;
    var endDate = ViewBag.EndDate as DateTime?;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-file-earmark-text-fill"></i> Generate Reports</h2>
            <p class="text-muted">View and download approved claims reports</p>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5><i class="bi bi-funnel-fill"></i> Filter Reports</h5>
        </div>
        <div class="card-body">
            <form asp-action="GenerateReports" method="post" class="row g-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" 
                           value="@(startDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" 
                           value="@(endDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Statistics -->
    @if (Model.Any())
    {
        var totalClaims = Model.Count;
        var totalAmount = Model.Sum(c => c.TotalAmount);
        var totalHours = Model.Sum(c => c.HoursWorked);
        var lecturerCount = Model.Select(c => c.LecturerName).Distinct().Count();

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h6>Total Claims</h6>
                        <h3>@totalClaims</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h6>Total Amount</h6>
                        <h3>@totalAmount.ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h6>Total Hours</h6>
                        <h3>@totalHours.ToString("N0")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h6>Lecturers</h6>
                        <h3>@lecturerCount</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Download Button -->
    @if (Model.Any())
    {
        <div class="mb-3">
            <a href="@Url.Action("DownloadReport", "HR", new { startDate = startDate, endDate = endDate })" 
               class="btn btn-success btn-lg">
                <i class="bi bi-download"></i> Download Report (CSV)
            </a>
            <a href="@Url.Action("DownloadPdfReport", "HR", new { startDate = startDate, endDate = endDate })" 
               class="btn btn-danger btn-lg">
                <i class="bi bi-file-pdf-fill"></i> Download Report (PDF)
            </a>
        </div>
    }

    <!-- Claims Table -->
    <div class="card">
        <div class="card-header">
            <h5><i class="bi bi-table"></i> Approved Claims</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Hours Worked</th>
                                <th>Hourly Rate</th>
                                <th>Total Amount</th>
                                <th>Submission Date</th>
                                <th>Approved By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.HoursWorked hrs</td>
                                    <td>@claim.HourlyRate.ToString("C")</td>
                                    <td><strong class="text-success">@claim.TotalAmount.ToString("C")</strong></td>
                                    <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <small>
                                            Coord: @(claim.CoordinatorApprovedBy ?? "N/A")<br />
                                            Manager: @(claim.ManagerApprovedBy ?? "N/A")
                                        </small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="4" class="text-end">Grand Total:</th>
                                <th colspan="3" class="text-success">@Model.Sum(c => c.TotalAmount).ToString("C")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle-fill"></i> No approved claims found for the selected period.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "HR")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

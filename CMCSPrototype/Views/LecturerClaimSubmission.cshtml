@model CMCSPrototype.Models.Claim
<div class="card">
    <div class="card-header"><i class="fas fa-plus"></i> Submit Claim</div>
    <div class="card-body">
        <form asp-action="SubmitClaim" enctype="multipart/form-data">
            <div class="form-group">
                <label><i class="fas fa-user"></i> Lecturer Name</label>
                <input asp-for="LecturerName" class="form-control" required />
            </div>
            <div class="form-group">
                <label><i class="fas fa-clock"></i> Hours Worked</label>
                <input asp-for="HoursWorked" type="number" step="0.01" class="form-control" required />
            </div>
            <div class="form-group">
                <label><i class="fas fa-dollar-sign"></i> Hourly Rate</label>
                <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" required />
            </div>
            <div class="form-group">
                <label><i class="fas fa-sticky-note"></i> Notes</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label><i class="fas fa-upload"></i> Upload Document</label>
                <input type="file" name="document" class="form-control" accept=".pdf,.docx,.xlsx" />
            </div>
            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-paper-plane"></i> Submit</button>
        </form>
    </div>
</div>
